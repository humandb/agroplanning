{% extends '::layout.html.twig' %}

{% block body -%}
    <h2>{{ "app.edit_tag" | trans }}</h2>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        {{ "app.vehicle_edit" | trans }}
                    </div>
                </div>
                <div class="panel-body">

                    {{ form_start(form, {'attr': {'class': 'form-horizontal form-groups-bordered', 'role': 'form'}}) }}

                    <div class="form-group">
                        {{ form_label(form.name, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.make, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.make, {'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.model, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.model, {'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.customer, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.customer, {'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-5">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        <div class="col-sm-4">
                            <a href="{{ path('vehicle') }}">Back to the list</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <script src="/assets/js/bootstrap-colorpicker.min.js"></script>
{% endblock %}
