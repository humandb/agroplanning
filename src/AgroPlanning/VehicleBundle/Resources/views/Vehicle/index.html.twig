{% extends '::layout.html.twig' %}

{% block body -%}
    <h3>{{ 'vehicle_list' | trans }}</h3>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped datatable" id="table-2">
                <thead>
                <tr>
                    <th>{{ "vehicle_name" | trans }}</th>
                    <th>{{ "vehicle_make" | trans }}</th>
                    <th>{{ "vehicle_model" | trans }}</th>
                    <th>{{ "actions" | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.make }}</td>
                        <td>{{ entity.model }}</td>
                        <td>
                            <a href="{{ path('vehicle_edit', { 'id': entity.id }) }}" class="btn btn-default btn-sm btn-icon icon-left">
                                <i class="entypo-pencil"></i>
                                Edit
                            </a>

                            <a href="{{ path('vehicle_delete', { 'id': entity.id }) }}" class="btn btn-danger btn-sm btn-icon icon-left">
                                <i class="entypo-cancel"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path("vehicle_new") }}" class="btn btn-primary btn-icon icon-left">
                <i class="entypo-tag"></i>
                {{ 'vehicle_add' | trans }}
            </a>
        </div>
    </div>
{% endblock %}